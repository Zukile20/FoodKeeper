<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="18sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">



    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="417dp"
        android:layout_height="669dp"
        app:srcCompat="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        />
    <RelativeLayout
        android:id="@+id/imageSection"
        android:layout_width="265dp"
        android:layout_height="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_background_white" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mealImage"
            android:layout_width="203dp"
            android:layout_height="194dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- Camera button -->
        <Button
            android:id="@+id/loadPicture"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/mealImage"
            android:layout_alignBottom="@+id/mealImage"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/camera"
            tools:visibility="visible" />

    </RelativeLayout>





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="355dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/back_white_arrow"
            android:contentDescription="back button" />

        <TextView
            android:id="@+id/titleHeader"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/create_meal"
            android:textColor="#ffffffff"
            android:textSize="21sp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="553dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginTop="-20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintBottom_toTopOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="textCapWords" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="88dp"
                    android:text="Select items :"

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search" />

                    <EditText
                        android:id="@+id/searchField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="@string/search_item"
                        android:textColorHint="@color/light_grey"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:background="@null"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/itemsListView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchLayout">

                <TextView
                    android:id="@+id/counterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"
                    android:text="Selected : 0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/fullViewBtn"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/full_screen"
                    app:layout_constraintBottom_toTopOf="@+id/customListView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchLayout"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="262dp"
                android:layout_gravity="center"

                />

            <Button
                android:id="@+id/createBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/linearLayout4"
                android:layout_gravity="center"
                android:layout_marginBottom="444dp"
                android:background="@drawable/blue_button"
                android:text="Create meal"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>