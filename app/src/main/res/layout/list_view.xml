<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_pink_background"
            android:padding="16dp"
            android:minHeight="56dp">

            <CheckBox
                android:id="@+id/item_checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@drawable/round_checkbox_selector"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Item Name with proper constraints -->
            <TextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toEndOf="@id/item_checkbox"
                app:layout_constraintEnd_toStartOf="@id/qty_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="Sample Item Name That Might Be Very Long" />

            <!-- Quantity container for better styling -->
            <LinearLayout
                android:id="@+id/qty_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/qty_background"
                android:padding="8dp"
                android:minWidth="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/qty_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: "
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/black"
                    android:minWidth="24dp"
                    android:gravity="center"
                    tools:text="99" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>